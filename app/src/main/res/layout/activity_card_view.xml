<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <fragment
        android:id="@+id/fragment_return_bar"
        android:name="com.travel.travelshare.ReturnBarFragment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"

        app:layout_constraintTop_toBottomOf="@id/fragment_return_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/image_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/alt_route_24px"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>

    <fragment
        android:id="@+id/fragment_card_view_chips"
        android:name="com.travel.travelshare.ChipFilterFragment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/cardview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_description_image_card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/fragment_card_view_chips"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday, November 19th"
            android:textStyle="bold"
            android:textSize="16sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/authorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From alex2003"
            android:textSize="14sp"

            app:layout_constraintTop_toBottomOf="@id/dateView"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/locationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At Lâc de Côme"
            android:textSize="14sp"

            app:layout_constraintTop_toBottomOf="@id/authorView"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/public_private_button"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text = "Public"
            android:drawableLeft="@drawable/public_24px"

            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:strokeColor = "@color/gray"
            app:strokeWidth = "1dp"

            android:paddingLeft="10dp"
            android:paddingRight="16dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/dislike_count"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="0"
            android:textSize="12sp"

            app:layout_constraintTop_toBottomOf="@id/public_private_button"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/image_dislike"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/thumb_down_24px"

            app:layout_constraintTop_toBottomOf="@id/public_private_button"
            app:layout_constraintRight_toLeftOf="@id/dislike_count"
            android:paddingRight="8dp"
            />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="0"
            android:textSize="12sp"
            android:paddingRight="8dp"

            app:layout_constraintTop_toBottomOf="@id/public_private_button"
            app:layout_constraintRight_toLeftOf="@id/image_dislike"/>

        <ImageView
            android:id="@+id/image_like"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/thumb_up_24px"

            app:layout_constraintTop_toBottomOf="@id/public_private_button"
            app:layout_constraintRight_toLeftOf="@id/like_count"
            android:paddingRight="8dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/description_image_card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="32dp"

        app:layout_constraintTop_toBottomOf="@id/first_description_image_card_view_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: This is a famous view of Lake Como, Italy, likely taken from Villa Monastero in Varenna, which is known for its botanical gardens and lakeside position."

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/instructions_image_card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="32dp"

        app:layout_constraintTop_toBottomOf="@id/description_image_card_view_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/text_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions: Supporting line text lorem ipsum dolor sit amet, consectetur."

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>