<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.publish.PublishFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/publish_cardview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="8dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/publish_image_cardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_48px"
                app:tint="@android:color/darker_gray"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/publish_upload_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Upload"

                app:icon="@drawable/upload_24px"

                app:strokeColor="@color/gray"
                app:strokeWidth="1dp"

                app:backgroundTint="@android:color/white"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/publish_take_photo_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Take Photo"

                app:icon="@drawable/photo_camera_24px"

                app:strokeColor="@color/gray"
                app:strokeWidth="1dp"

                app:backgroundTint="@android:color/white"

                app:layout_constraintEnd_toStartOf="@id/publish_upload_button"
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.publish.PublishFragment"
        app:layout_constraintTop_toBottomOf="@id/publish_cardview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:checkedButton="@+id/public_toggle_button"

            android:layout_marginTop="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/public_toggle_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public"
                app:icon="@drawable/public_24px" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/private_toggle_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private"
                app:icon="@drawable/visibility_off_24px" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            app:endIconDrawable="@drawable/calendar_month_24px"
            app:endIconMode="custom"

            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxStrokeWidth="2dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"

            app:layout_constraintTop_toBottomOf="@id/toggle_visibility"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/publish_edit_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:inputType="date"
                android:text="mm/dd/yyyy" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"

            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxStrokeWidth="2dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"

            app:layout_constraintTop_toBottomOf="@id/layout_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/publish_edit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructions"

            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxStrokeWidth="2dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"

            app:layout_constraintTop_toBottomOf="@id/layout_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/publish_edit_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            app:endIconDrawable="@drawable/location_on_24px"
            app:endIconMode="custom"

            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxStrokeWidth="2dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"

            app:layout_constraintTop_toBottomOf="@id/layout_instructions"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/publish_edit_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/publish_button"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text = "Publish"
            android:drawableLeft="@drawable/publish_24px"
            android:drawableTint="@color/white"

            app:layout_constraintTop_toBottomOf="@id/layout_location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>